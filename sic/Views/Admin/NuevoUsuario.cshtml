@{
    ViewData["Title"] = "Nuevo Usuario";
    ViewBag.ActivePage = "NuevoUsuario";
    Layout = "_LayoutAdmin";
}

<div class="col-md-10 p-4" id="mainContent">
  <div class="d-flex justify-content-between align-items-center mt-4">
    <h1 class="text-success">AÑADIR USUARIO</h1>
    <a href="#" class="text-muted"><i class="fas fa-sign-out-alt"></i> Cerrar Sesión</a>
  </div>

  <form class="mt-4">
    <div class="row">
      <!-- No. Nómina -->
      <div class="col-md-6 mb-3">
        <label for="nomina" class="form-label">No. Nómina</label>
        <input type="text" id="nomina" class="form-control" placeholder="######">
      </div>

      <!-- Nombre completo -->
      <div class="col-md-6 mb-3">
        <label for="nombre" class="form-label">Nombre Completo</label>
        <input type="text" id="nombre" class="form-control" placeholder="NombreApellidos">
      </div>
    </div>

    <div class="row">
      <!-- Cargo -->
      <div class="col-md-6 mb-3">
        <label for="cargo" class="form-label">Cargo</label>
        <select id="cargo" class="form-select">
          <option selected>Seleccionar</option>
          <option>Administrador</option>
          <option>Coordinador</option>
          <option>Docente</option>
        </select>
      </div>

      <!-- Correo institucional -->
      <div class="col-md-6 mb-3">
        <label for="correo" class="form-label">Correo Institucional</label>
        <input type="email" id="correo" class="form-control" placeholder="correo@utcancun.edu.mx">
      </div>
    </div>

    <!-- Contraseña -->
    <div class="row">
      <div class="col-md-12 mb-4">
        <label for="contrasena" class="form-label">Contraseña</label>
        <input type="password" id="contrasena" class="form-control" placeholder="************">
      </div>
    </div>

    <!-- Botón -->
    <div class="text-center">
      <button type="submit" class="btn btn-success px-5">Crear Usuario</button>
    </div>
  </form>
</div>