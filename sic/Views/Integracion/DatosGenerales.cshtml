@{
    ViewData["Title"] = "Datos Generales";
    ViewData["Header"] = "Datos Generales";
    Layout = "_LayoutIntegracion";
}
<form class="d-grid gap-2" asp-action="DatosGeneralesPost" asp-controller="Integracion" method="post">
  <label for="nombre" style="color: black;">Nombre Completo</label>
                
  <div class="form-group d-flex">
    <input type="text" id="nombre" name="nombre" class="form-control" placeholder="Nombre(s)" required>
    <input type="text" id="apeliido_paterno" name="apellido p" class="form-control" placeholder="Apellido Paterno" required/>
    <input type="text" id="apeliido_materno" name="apellido m" class="form-control" placeholder="Apellido Materno" required/>
  </div> 

  <div class="d-flex">
    <div>
      <label for="lugar de nacimiento" style="color: black;">Lugar de Nacimiento</label>
      <div class="form-group d-flex" style="color: black;">
        <input type="text" id="estado" name="estado" class="form-control" placeholder="Estado" required/>
        <input type="text" id="pais" name="pais" class="form-control" placeholder="Pais" required/>
      </div>
    </div>
    <div class="ms-3">
      <label for="fecha de nacimiento" style="color: black;">Fecha de Nacimiento</label>
      <div class="form-group">
        <input type="date" id="fecha_nacimiento" name="fecha_nacimiento" class="form-control text-uppercase" style="color: gray;" required/>
      </div>  
    </div>    
  </div>  

  <div class="d-flex">
    <div>
      <label for="Sexo" style="color: black;">Sexo</label>
      <div class="dropdown">
        <button class="btn btn-secondary dropdown-toggle" type="button" id="sexo" data-bs-toggle="dropdown" aria-expanded="false">
          Seleccionar
        </button>
        <div class="dropdown-menu" aria-labelledby="sexo">
          <button class="dropdown-item" type="button" onclick="actualizarDD('Masculino','sexo')">Masculino</button>
          <button class="dropdown-item" type="button" onclick="actualizarDD('Femenino','sexo')">Femenino</button>
          <button class="dropdown-item" type="button" onclick="actualizarDD('No binario','sexo')">No binario</button>
        </div>
      </div>
    </div>  
    <div class="ms-3">
      <label for="curp" style="color: black;">CURP</label>
      <input type="text" id="curp" name="curp" class="form-control" placeholder="XXXXXXXXXXXXXXXXX" required/>
    </div>  
    <div class="ms-3">
      <label for="rfc" style="color: black;">RFC</label>
      <input type="text" id="rfc" name="rfc" class="form-control" placeholder="XXXXXXXXXXX" required/>
    </div> 
    <div class="ms-3">
      <label for="estado_civil_o_conyugal" style="color: black;">Estado civil o conyugal</label>
      <div class="dropdown">
        <button class="btn btn-secondary dropdown-toggle" type="button" id="estado_civil" data-bs-toggle="dropdown" aria-expanded="false" >
          Seleccionar
        </button>
        <div class="dropdown-menu" aria-labelledby="estado_civil">
          <button class="dropdown-item" type="button" onclick="actualizarDD('Soltera/o','estado_civil')">Soltera/o</button>
          <button class="dropdown-item" type="button" onclick="actualizarDD('Union Libre','estado_civil')">Union Libre</button>
          <button class="dropdown-item" type="button" onclick="actualizarDD('Casada/o','estado_civil')">Casada/o</button>
          <button class="dropdown-item" type="button" onclick="actualizarDD('Divorciada/o','estado_civil')">Divorciada/o</button>
          <button class="dropdown-item" type="button" onclick="actualizarDD('Viuda/o','estado_civil')">Viuda/o</button>
        </div>
      </div>
    </div> 
  </div> 


  <label for="domicilio" style="color: black;">Domicilio</label>
  <div class="form-group d-flex">
    <input type="text" id="direccion" name="direccion" class="form-control" style="width: 200%;" placeholder="Calle, Colonia, SMz..." required>
    <input type="text" id="cp" name="codigo_postal" class="form-control" placeholder="Codigo Postal" required/>
  </div>

  <label for="contacto" style="color: black;">Contacto</label>
  <div class="form-group d-flex">
    <input type="tel" id="tel_casa" name="tel_casa" class="form-control" placeholder="Tel. Casa" required>
    <input type="tel" id="tel_cel" name="tel_cel" class="form-control" placeholder="Tel. Cel" required/>
    <input type="email" id="e_mail" name="e_mail" class="form-control" placeholder="E-mail" required/>
  </div>

  <button type="submit" class="btn btn-primary w-25 ms-auto mt-4">Continuar</button>
</form>